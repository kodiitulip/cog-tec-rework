{
  "setupTasks": [
    {
      "name": "Installing bun",
      "command": "npm install -g bun"
    },
    {
      "name": "Installing Dependencies",
      "command": "bun install"
    }
  ],
  "tasks": {
    "dev": {
      "name": "dev",
      "command": "bun --bun dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "build": {
      "name": "build",
      "command": "bun --bun build"
    },
    "start": {
      "name": "start",
      "command": "bun --bun start"
    },
    "lint": {
      "name": "lint",
      "command": "bun lint"
    },
    "studio": {
      "name": "studio",
      "command": "bun studio"
    },
    "push": {
      "name": "push",
      "command": "bun push"
    },
    "seed": {
      "name": "seed",
      "command": "bun seed"
    }
  }
}
